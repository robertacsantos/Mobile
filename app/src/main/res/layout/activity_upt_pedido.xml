<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backpedido"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="#3A5108"
            android:text="Almoço"/>


        <Spinner
            android:id="@+id/spinneralmoco"
            android:layout_width="333dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_pedido"
            android:spinnerMode="dialog" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="#3A5108"
            android:text="Bebida" />

        <Spinner
            android:id="@+id/spinnerbebida"
            android:layout_width="333dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_pedido"
            android:spinnerMode="dialog" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="#3A5108"
            android:text="Descrição" />


        <EditText
            android:id="@+id/descricaoPedido"
            android:layout_width="333dp"
            android:layout_height="30dp"
            android:layout_margin="5dp"
            android:background="@drawable/shape_pedido"
            android:inputType="text" />

        <Button
            android:id = "@+id/btalterar"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:background="#3A5108"
            android:layout_margin="5dp"
            android:text = "@string/btalterar" />
        <Button
            android:id = "@+id/btexcluir"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:background="#3A5108"
            android:layout_margin="5dp"
            android:text = "@string/btexcluir" />

    </LinearLayout>
</ScrollView>
