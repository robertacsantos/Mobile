        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".views.MenuActivity"
            android:label="Menu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.AddAlmocoActivity"
            android:label="Adicionar-Almoço"/>
        <activity
            android:name=".views.AddBebidaActivity"
            android:label="Adicionar-Bebida"/>
        <activity
            android:name=".views.ListAlmocoActivity"
            android:label="Listar-Almoço"/>
        <activity
            android:name=".views.UptAlmocoActivity"
            android:label="Atualizar-Almoço"/>
        <activity
            android:name=".views.ListBebidaActivity"
            android:label="Listar-Bebida"/>
        <activity
            android:name=".views.UptBebidaActivity"
            android:label="Atualizar-Bebida"/>

